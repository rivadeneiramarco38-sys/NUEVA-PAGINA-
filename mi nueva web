// ================= App.jsx =================
import { useState } from "react";
import { motion } from "framer-motion";
import { generateImage } from "./api/image";
import { generateDialog } from "./api/dialog";
import { generateVideo } from "./api/video";

export default function App() {
  const [prompt, setPrompt] = useState("");
  const [image, setImage] = useState(null);
  const [dialog, setDialog] = useState("");
  const [video, setVideo] = useState(null);

  async function handleImage() {
    const img = await generateImage(prompt);
    setImage(img);
  }

  async function handleDialog() {
    const text = await generateDialog(prompt);
    setDialog(text);
  }

  async function handleVideo() {
    const vid = await generateVideo(prompt);
    setVideo(vid);
  }

  return (
    <div className="p-6 flex flex-col items-center gap-6" style={{ maxWidth: "900px", margin: "auto" }}>
      <h1 className="text-4xl font-bold">IA Studio</h1>

      <textarea
        rows={4}
        value={prompt}
        onChange={(e) => setPrompt(e.target.value)}
        placeholder="Escribe lo que quieres generar..."
        style={{ width: "100%" }}
      />

      <div style={{ display: "flex", gap: "10px", width: "100%", justifyContent: "center" }}>
        <button onClick={handleImage}>Generar Imagen</button>
        <button onClick={handleDialog}>Crear Guion</button>
        <button onClick={handleVideo}>Generar Video</button>
      </div>

      {image && (
        <motion.img
          src={image}
          className="rounded-2xl"
          style={{ width: "300px", marginTop: "20px" }}
          animate={{ scale: [1, 1.02, 1] }}
          transition={{ duration: 2, repeat: Infinity }}
        />
      )}

      {dialog && (
        <motion.pre
          style={{ background: "#111", padding: "20px", borderRadius: "12px", marginTop: "20px" }}
          animate={{ opacity: [0.7, 1, 0.7] }}
          transition={{ duration: 4, repeat: Infinity }}
        >
          {dialog}
        </motion.pre>
      )}

      {video && (
        <motion.video
          src={video}
          controls
          style={{ width: "320px", borderRadius: "12px", marginTop: "20px" }}
          animate={{ y: [0, -4, 0] }}
          transition={{ duration: 3, repeat: Infinity }}
        />
      )}
    </div>
  );
}
